<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ergnologi.pantaucovid19">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.ResultActivity"></activity>
        <activity android:name=".ui.PeriksaMandiriActivity" />
        <activity
            android:name=".ui.YoutubePlayerActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.DetailArtikelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ArticleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ProvinsiActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SeputarCovidActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>